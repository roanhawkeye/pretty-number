<h1 class="text-center">Prettify Your Number</h1>
<div class="col-md-6 col-md-offset-3">

	<%= form_for :number, :url => url_for(:controller => 'pretty_numbers', :action => 'prettify', method: 'post'), remote: true do |f| %>
		<%= f.number_field :value,  :step => 'any' %>
		<%= f.submit "Prettify Number Now"%>
	<% end %>

	<div id="result" class="row"></div>
</div>
